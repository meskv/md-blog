<!DOCTYPE html>
<html lang="en">

<head>
    <!-- <title>Blog</title> -->
    <%- include('../partials/_head') %>
</head>

<body>
    <%- include('../partials/_header') %>
        <div class="container">
            <div class="container mt-4">
                <h1>Total Files : <%= files.length %>
                </h1>
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    <% for( let i = 0; i < files.length; i++ ) { %>
                        <div class="col">
                            <div class="card">
                                <p>Filename: <%= files[i].filename %>
                                </p>
                                <p>Upload Date: <%= files[i].uploadDate.toLocaleString('en-In') %>
                                </p>
                                <div class="card-body">
                                    <img src="/files/display/<%= files[i].filename %>" alt="" height="300">
                                    <a href="/files/display/<%= files[i].filename %>" class="btn btn-primary">Download</a>
                                    <form action="/files/<%= files[i].filename %>?_method=DELETE" class="d-inline"
                                        method="POST">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>

            <footer class="footer text-center">
                <%- include('../partials/_footer') %>
            </footer>
</body>

</html>