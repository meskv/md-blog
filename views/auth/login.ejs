<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/_head') -%>
</head>

<body>
    <header>
        <%- include('../partials/_header') -%>
    </header>

    <div class="container py-5">
        <div class="container">
            <form action="/auth/login" class="form login-form" method="post">
                <h5 class="form-title">Login</h5>
                <a>
                    <% if (locals.message) { %>
                        <p class="alert alert-success text-center">
                            <%= message %>
                        </p>
                        <% } %>
                </a>
                <a>
                    <% if (locals.logout) { %>
                        <p class="alert alert-success text-center">
                            <%= logout %>
                        </p>
                        <% } %>
                </a>
                <div class="form-group">
                    <label for="email">Email Id</label>
                    <input type="email" class="form-control" name="email">
                    <!-- <small class="form-text text-muted text-left">Registered email address</small> -->
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-success rounded form-control" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <div>
        <%- include ('../partials/_footer') -%>
    </div>
</body>

</html>